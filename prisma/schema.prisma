// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(cuid())
  role      Role       @default(USER)
  createdAt DateTime   @default(now())
  Playlist  Playlist[]
}

model Playlist {
  id           String  @id @default(cuid())
  title        String
  thumnnailUrl String
  userId       String
  user         User    @relation(fields: [userId], references: [id])
  videos       Video[]

  createdAt DateTime @default(now())

  @@unique([title, userId])
}

model Album {
  id           String    @id @default(cuid())
  title        String
  thumnnailUrl String
  type         AlbumType @default(SINGLE)

  videos Video[]

  createdAt DateTime @default(now())

  @@unique([title])
}

model Artist {
  id         String @id @default(cuid())
  name       String
  channelUrl String

  videos Video[]

  createdAt DateTime @default(now())

  @@unique([name, channelUrl])
}

model Video {
  id             String @id @default(cuid())
  youtubeVideoId String
  start          Int
  end            Int
  originalTitle  String
  title          String
  thumnnailUrl   String

  artists  Artist[]
  playlits Playlist[]
  albums   Album[]

  createdAt DateTime @default(now())

  @@unique([youtubeVideoId, start, end])
}

enum Role {
  USER
  ADMIN
}

enum AlbumType {
  SINGLE
  LIVE
}
